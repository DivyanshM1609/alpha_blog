<%= render 'shared/errors', obj:@category %>
<div class="container">
    <%= form_with(model: @category, class:'shadow-sm p-3 mb-5 bg-secondary rounded') do |f| %>
    <div class="form-group row">
        <%= f.label :name, "Category name", class:'col-2 col-form-label text-light'%>
        <div class="col-10">
            <%= f.text_field :name, class:'form-control shadow-sm mb-2 rounded', placeholder:'Enter Category Name' %>
        </div>
    </div>
    <div class="form-group row mt-4 justify-content-center">
        <%= f.submit class:"col-3 btn btn-primary btn-large " %>
    </div>
    
</div>
<div class="container text-center">
  <%= link_to "Back to category", categories_path(@category), class:"btn btn-primary" %>
</div>
<% end %>